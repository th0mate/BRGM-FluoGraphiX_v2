{
  "name": "fluographix-v2",
  "version": "1.9.5",
  "description": "FluoGraphiX est un outil de visualisation et d'analyse de données issues de fluorimètres conçue pour le compte du BRGM.",
  "author": "Thomas LOYE",
  "main": "main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "start": "electron .",
    "compose": "electron-builder",
    "compose-publish": "electron-builder --publish always"
  },
  "build": {
    "asar": true,
    "productName": "FluoGraphiX",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "public/icons/icon.ico"
    },
    "mac": {
      "icon": "public/icons/icon.icns"
    },
    "linux": {
      "icon": "public/icons/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "th0mate",
        "repo": "BRGM-FluoGraphiX_v2"
      }
    ]
  },
  "dependencies": {
    "@primeuix/themes": "^1.1.1",
    "@splidejs/vue-splide": "^0.6.12",
    "chart.js": "^4.4.9",
    "chartjs-adapter-luxon": "^1.3.1",
    "chartjs-plugin-annotation": "^3.1.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "html2canvas": "^1.4.1",
    "luxon": "^3.6.1",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.4",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "npm-run-all2": "^7.0.2",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8"
  }
}
